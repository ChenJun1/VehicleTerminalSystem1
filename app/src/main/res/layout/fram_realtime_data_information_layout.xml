<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#0f0f0f"
              android:orientation="vertical">

    <include layout="@layout/layout_toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_layout"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="1dp"
                android:layout_weight="1"
                android:background="@drawable/bg_layout1"
                android:gravity="center_vertical">

                <TextView
                    style="@style/more_text"
                    android:layout_width="0dp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:text="引擎转速"/>

                <TextView
                    android:id="@+id/engineSpeed_tv"
                    style="@style/more_text"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="#c7e01d"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#1e1e1e"
                android:gravity="center_vertical">

                <TextView
                    style="@style/more_text"
                    android:layout_width="0dp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:text="电池电压"/>

                <TextView
                    android:id="@+id/cellVoltage_tv"
                    style="@style/more_text"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="#c7e01d"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#191919"
                android:gravity="center_vertical">

                <TextView
                    style="@style/more_text"
                    android:layout_width="0dp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:text="外部电压"/>

                <TextView
                    android:id="@+id/externalVoltage_tv"
                    style="@style/more_text"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="#c7e01d"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#1e1e1e"
                android:gravity="center_vertical">

                <TextView
                    style="@style/more_text"
                    android:layout_width="0dp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:text="累计油耗"/>

                <TextView
                    android:id="@+id/cumulativeFuelConsumption_tv"
                    style="@style/more_text"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="#c7e01d"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:background="@drawable/bg_layout"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="1dp"
                android:layout_weight="1"
                android:background="@drawable/bg_layout1"
                android:gravity="center_vertical">

                <TextView
                    style="@style/more_text"
                    android:layout_width="0dp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:text="发动机水温"/>

                <TextView
                    android:id="@+id/temperature_tv"
                    style="@style/more_text"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="#c7e01d"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#1e1e1e"
                android:gravity="center_vertical">

                <TextView
                    style="@style/more_text"
                    android:layout_width="0dp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:text="机油压力"/>

                <TextView
                    android:id="@+id/oilPressure_tv"
                    style="@style/more_text"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="#c7e01d"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#191919"
                android:gravity="center_vertical">

                <TextView
                    style="@style/more_text"
                    android:layout_width="0dp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:text="瞬时油耗"/>

                <TextView
                    android:id="@+id/instantaneousFuelConsumption_tv"
                    style="@style/more_text"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="#c7e01d"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#1e1e1e"
                android:gravity="center_vertical">

                <TextView
                    style="@style/more_text"
                    android:layout_width="0dp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:text="发动机扭矩"/>

                <TextView
                    android:id="@+id/engineTorque_tv"
                    style="@style/more_text"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="#c7e01d"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>