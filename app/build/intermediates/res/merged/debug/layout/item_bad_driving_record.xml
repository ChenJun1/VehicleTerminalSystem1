<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:background="#171717"
              android:layout_width="match_parent"
              android:layout_height="55dp">
    <TextView
        android:id="@+id/index_tv"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="序号"
        android:textColor="@color/colorVehicleParametersText2"
        android:textSize="@dimen/fram_driving_text_size18"/>
    <TextView
        android:id="@+id/licenseNo_tv"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:gravity="center"
        android:text="证件号"
        android:textColor="@color/colorVehicleParametersText2"
        android:textSize="@dimen/fram_driving_text_size18"/>
    <TextView
        android:id="@+id/beginTime_tv"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:gravity="center"
        android:text="开始时间"
        android:textColor="@color/colorVehicleParametersText2"
        android:textSize="@dimen/fram_driving_text_size18"/>

    <TextView
        android:id="@+id/endTime_tv"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:gravity="center"
        android:text="结束时间"
        android:textColor="@color/colorVehicleParametersText2"
        android:textSize="@dimen/fram_driving_text_size18"/>


    <TextView
        android:id="@+id/turnOverNumber_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:text="超转次数"
        android:textColor="@color/colorVehicleParametersText2"
        android:textSize="@dimen/fram_driving_text_size18"/>


    <TextView
        android:id="@+id/speedingNumber_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:text="超速次数"
        android:textColor="@color/colorVehicleParametersText2"
        android:textSize="@dimen/fram_driving_text_size18"/>
</LinearLayout>