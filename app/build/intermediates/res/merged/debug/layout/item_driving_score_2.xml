<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#171717"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/serial_number_tv"
            android:text="1"
            android:textColor="@color/colorVehicleParametersText2"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/begin_time_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.5"
            android:gravity="center"
            android:text="2015.04.28 08:08/2016.05.28 16:10"
            android:textColor="@color/colorVehicleParametersText2"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/mileage_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="640"
            android:textColor="@color/colorVehicleParametersText2"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/oilConsumption_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="49"
            android:textColor="@color/colorVehicleParametersText2"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/averageOilConsumption_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="20.8"
            android:textColor="@color/colorVehicleParametersText2"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/averagescore_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="79"
            android:textColor="@color/colorVehicleParametersText2"
            android:textSize="18sp"/>

    </LinearLayout>
</LinearLayout>