<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#0f0f0f"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1.6"
            android:orientation="vertical">

            <include layout="@layout/include_fram_equp_test_1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="2.4"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.2"
                        android:background="@mipmap/bg_driving_score">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="30dp"
                            android:text="摄像头测试"
                            android:textColor="@color/colorVehicleParametersText2"
                            android:textSize="@dimen/text_size20"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@color/color_191919">

                        <TextView
                            style="@style/fram_test_text1"
                            android:text="摄像头1状态"/>

                        <TextView
                            android:id="@+id/cameraState1_tv"
                            style="@style/fram_test_text3"
                            android:text="掉线"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@color/color_1E1E1E">

                        <TextView
                            style="@style/fram_test_text1"
                            android:text="摄像头2状态"/>

                        <TextView
                            android:id="@+id/cameraState2_tv"
                            style="@style/fram_test_text3"
                            android:text="掉线"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@color/color_191919">

                        <TextView
                            style="@style/fram_test_text1"
                            android:text="摄像头3状态"/>

                        <TextView
                            android:id="@+id/cameraState3_tv"
                            style="@style/fram_test_text3"
                            android:text="掉线"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@color/color_1E1E1E">

                        <TextView
                            style="@style/fram_test_text1"
                            android:text="摄像头4状态"/>

                        <TextView
                            android:id="@+id/cameraState4_tv"
                            style="@style/fram_test_text3"
                            android:text="掉线"/>
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@color/color_191919">

                        <TextView
                            style="@style/fram_test_text1"
                            android:text="CPU 使用率"/>

                        <TextView
                            android:id="@+id/cpuUtilizationRate_tv"
                            style="@style/fram_test_text4"
                            android:text="20%"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@color/color_1E1E1E">

                        <TextView
                            style="@style/fram_test_text1"
                            android:text="核心温度"/>

                        <TextView
                            android:id="@+id/coreTemperature_tv"
                            style="@style/fram_test_text4"
                            android:text="30°C"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@color/color_191919">

                        <TextView
                            style="@style/fram_test_text1"
                            android:text="外部电压"/>

                        <TextView
                            android:id="@+id/externalVoltage_tv"
                            style="@style/fram_test_text4"
                            android:text="24V"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@color/color_1E1E1E">

                        <TextView
                            style="@style/fram_test_text1"
                            android:text="锂电电压"/>

                        <TextView
                            android:id="@+id/batteryVoltage_tv"
                            style="@style/fram_test_text4"
                            android:text="4.2V"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@color/color_191919">
                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.2"
                    android:background="@mipmap/bg_driving_score"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:text="储存卡属性"
                        android:textColor="@color/colorVehicleParametersText2"
                        android:textSize="@dimen/text_size20"/>
                </LinearLayout>

                <LinearLayout
                    android:paddingBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="4"
                    android:background="@color/color_191919"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1">

                            <TextView
                                style="@style/fram_test_text1"
                                android:text="容量"/>

                            <TextView
                                android:id="@+id/capacity_tv"
                                style="@style/fram_test_text4"
                                android:text="4G"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1">

                            <TextView
                                style="@style/fram_test_text1"
                                android:text="可用"/>

                            <TextView
                                android:id="@+id/isAble_tv"
                                style="@style/fram_test_text4"
                                android:text="3.4545G"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1">

                            <TextView
                                style="@style/fram_test_text1"
                                android:text="存储卡速率"/>

                            <TextView
                                android:id="@+id/sdRate_tv"
                                style="@style/fram_test_text4"
                                android:text="25.00MHZ"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1">

                            <TextView
                                style="@style/fram_test_text1"
                                android:text="主机总线速率"/>

                            <TextView
                                android:id="@+id/hostBusRate_tv"
                                style="@style/fram_test_text4"
                                android:text="7.5MHZ"/>
                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/format_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/vehicle_parameters_bg1"
                            android:gravity="center"
                            android:paddingBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:text="确定格式化"
                            android:textColor="@color/color_E0FD1D"
                            android:textSize="@dimen/text_size22"/>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>